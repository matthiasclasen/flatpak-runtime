{
    "ref": "base/org.flatpak.Runtime/x86_64/1",

    "repos": ["centos-base", "centos-updates"],

    "selinux": false,

    "documentation": false,

    "container": true,

    "automatic_version_prefix": "7",

    "postprocess-script": "treecompose-post.sh",

    "etc-group-members": ["wheel"],

    "ignore-removed-users": ["root"],
    "ignore-removed-groups": ["root"],
    "check-passwd": { "type": "file", "filename": "passwd" },
    "check-groups": { "type": "file", "filename": "group" },

    "packages": [
        /* base system */
        "centos-release",
        "basesystem",
        "glibc",
        "bash",
        "setup",
        "coreutils",
        "util-linux",
        "rpm",
        "which",
        "curl",
        "findutils",
        "hicolor-icon-theme",
        "shared-mime-info",
        /* crypto and compression */
        "gnupg2",
        "xz",
        "gzip",
        "bzip2",
        /* image libraries */
        "libpng",
        "libjpeg-turbo",
        /* X11 libraries */
        "libICE",
        "libSM",
        "libX11",
        "libXScrnSaver",
        "libXau",
        "libXcomposite",
        "libXcursor",
        "libXdamage",
        "libXext",
        "libXfixes",
        "libXft",
        "libXi",
        "libXinerama",
        "libXpm",
        "libXrandr",
        "libXrender",
        "libXt",
        "libXtst",
        "libXv",
        "libXxf86vm",
        "xcb-util",
        "libXfont",
        "libfontenc",
        "xorg-x11-font-utils",
        "ttmkfdir",
        "dejavu-fonts-common",
        /* mesa */
        "mesa-libEGL",
        "mesa-libglapi",
        "mesa-libgbm",
        "mesa-libGL",
        "mesa-dri-drivers",
        "mesa-libGLU",
        "libGLEW",
        /* pulseaudio */
        "pulseaudio-libs",
        "pulseaudio-libs-glib2"
    ]
}

